{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier", 
        "plugin:cypress/recommended"
    ],
    "ignorePatterns": [
        "/build/*"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "jest"
    ],
    "rules": {
        "no-unused-vars":"warn",
        "no-plusplus":"off",
        "no-use-before-define":"off",    

        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto",
              "singleQuote": true
            }
        ]
    }
}
